<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="cz.uhk.fim.virtualeconomy" level="INFO">
        <appender-ref ref="CONSOLE" />
    </logger>

    <appender name="STATSD" class="org.ubercraft.statsd.StatsdLogbackAppender">
        <host>debian.local.net</host>
        <port>8125</port>
        <queueSize>10</queueSize>
        <queueOfferTimeout>0</queueOfferTimeout>
    </appender>

    <logger name="statsd.virtualeconomy" level="DEBUG">
        <appender-ref ref="STATSD" />
    </logger>
</configuration>